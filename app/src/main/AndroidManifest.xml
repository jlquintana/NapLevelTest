<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.joseluisquintana.napptilustest.app"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <activity android:name=".list.OompaLoompaListActivity">
            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="joseluisquintana.com"
                    android:pathPattern="/OompaLoompaList"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".detail.OompaLoompaDetailActivity"
            android:parentActivityName=".list.OompaLoompaListActivity">
            <intent-filter android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="joseluisquintana.com"
                    android:pathPattern="/OompaLoompa"
                    android:scheme="https" />
            </intent-filter>
        </activity>
    </application>

</manifest>
